<div class="ui secondary pointing menu">
  <a class="item">
    <%=link_to 'Home', user_path(current_user), method: :get %>
  </a>
  <a class="item">
    <%=link_to 'Events', events_path, method: :get %>
  </a>
  <a class="item">
    <%=link_to 'Sights', sights_path, method: :get %>
  </a>
  <a class="item">
    <%=link_to 'Donate', sight_funds_path, method: :get%>
  </a>
  <div class="right menu">
    <a class="ui item">
      <%=link_to 'Logout', logout_path, method: :delete %>
    </a>
  </div>
</div>

<h1>New Event</h1>


<form class="ui form">

  <h1>New Event</h1>

<%= form_for @user do |f| %>
  <div class="field">
  <%= f.label :name %>
  <%= f.text_field :name %>
  <div class="field">
  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.submit %>
<% end %>
</div>

<%= link_to 'Back', events_path %>
</div>
