<div class="ui secondary pointing menu">
  <a class="item">
    <%=link_to 'Events', events_path, method: :get %>
  </a>
  <a class="item">
    <%=link_to 'Sights', sights_path, method: :get %>
  </a>
  <a class="item">
    <%=link_to 'Donate', sight_funds_path, method: :get%>
  </a>
  <div class="right menu">
    <a class="ui item">
      <%=link_to 'Logout', logout_path, method: :delete %>
    </a>
  </div>
</div>
<h4><%= @sight_fund.sight.name %></h4>

<%= form_for @donation do |f| %>
  <%= f.hidden_field :user_id, value: @current_user_id %>
  Pledge amount: $<%= f.number_field :amount %>
  <%= f.hidden_field :sight_fund_id, value: @sight_fund.id %>
  <%= f.submit %>
<% end %>
