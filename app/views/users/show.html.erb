<div class="ui secondary pointing menu">
  <a class="item">
    <%=link_to 'Events', events_path, method: :get %>
  </a>
  <a class="item">
    <%=link_to 'Sights', sights_path, method: :get %>
  </a>
  <a class="item">
    <%=link_to 'Donate', sight_funds_path, method: :get%>
  </a>
  <div class="right menu">
    <a class="ui item">
      <%=link_to 'Logout', logout_path, method: :delete %>
    </a>
  </div>
</div>


<h3> hi <%= @user.name %>!</h3>

<h4>Your Favorite High Line Sights</h4>
<ul>
  <% @user.sights.each do |user_sight| %>
  <li><%= user_sight.name %></li>
  <%end %>
</ul>
<h4>Your Upcoming Events</h4>
<ul>
  <% @user.events.each do |user_event| %>
  <li><%= user_event.name %></li>
  <%end %>
</ul>
<h4>Your High Line Site Funding</h4>
<ul>
  <% @user.sight_funds.each do |sight_fund| %>
  <li><%= sight_fund.sight.name %></li>
  <% sight_fund.donations.each do |dono| %>
    <%= dono.amount %>
    <%end%>
  <%end%>
</ul>


