


<h3> Hi <%= @user.name %>! Welcome to your High Line dashboard!</h3>

<j1>Your Favorite High Line Sights</j1>
<ul>
  <% @user.sights.each do |user_sight| %>
  <li><%= user_sight.name %></li>
  <%end %>
</ul>
<h4>Your Upcoming Events</h4>
<ul>
  <% @user.events.each do |user_event| %>
  <li><%= user_event.name %></li>
  <%end %>
</ul>
<h4>Your High Line Site Funding</h4>
<ul>
  <% @user.sight_funds.each do |sight_fund| %>
  <li><%= sight_fund.sight.name %></li>
  <% sight_fund.donations.each do |dono| %>
    <%= dono.amount %>
    <%end%>
  <%end%>
</ul>




<h4>Analytics</h4>


<h5>Your Total Donations</h5>
  <% total_donations = 0 %>
  <% @user.sight_funds.each do |sight_fund| %>
    <% sight_fund.donations.each do |dono| %>
      <% total_donations += dono.amount %>
    <% end %>
  <% end %>
  <%= total_donations %>
